<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progressConstraint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelText"
        android:layout_width="@dimen/cell_width"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="ArrayList.\nAdding in the tail" />

    <FrameLayout
        android:layout_width="@dimen/cell_width"
        android:layout_height="@dimen/cell_height"
        android:background="@color/colorCell">

        <TextView
            android:id="@+id/collectionsText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/collectionsProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/collectionsError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:src="@android:drawable/stat_notify_error"
            android:tint="#ff0000" />
    </FrameLayout>


</LinearLayout>