<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progressConstraint"
    android:layout_width="@dimen/cell_size"
    android:layout_height="@dimen/cell_size">

    <TextView
        android:id="@+id/collectionsText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <ProgressBar
        android:id="@+id/collectionsProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/collectionsError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tint="#ff0000"
        android:layout_margin="16dp"
        android:src="@android:drawable/stat_notify_error"/>

</FrameLayout>